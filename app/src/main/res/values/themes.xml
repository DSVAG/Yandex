<resources>

    <style name="Theme.Yandex" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/grey_light</item>
        <item name="colorSecondaryVariant">@color/grey</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="trackHeight">0dp</item>
        <item name="tabSelectedTextColor">?colorOnPrimary</item>
        <item name="tabTextColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAlignment">center</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Headline2</item>
    </style>

    <style name="Theme.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/favorite</item>
    </style>

</resources>